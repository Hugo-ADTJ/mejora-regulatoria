---
import MobileMenuButton from "./MobileMenuButton.astro";
---

<header class="header" id="main-header">
  <div class="header-container">
    
    <!-- Logo / Branding -->
    <div class="logo-group">
      <div class="logo-container">
        <img 
          src="/image.png" 
          alt="XXV Ayuntamiento de Tijuana - Mejora Regulatoria" 
          class="logo-image" 
          width="200" 
          height="80"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>

    <!-- Navegación Píldora Central -->
    <nav class="nav-desktop" aria-label="Navegación principal">
      <div class="nav-pill">
        <a href="#inicio" class="nav-link">Inicio</a>
        <a href="#catálogo" class="nav-link">Catálogo</a>
        <a href="#consejo" class="nav-link">Consejo</a>
        <a href="#participación" class="nav-link">Participación</a>
        <div class="nav-divider"></div>
        <button class="nav-button-tramites">Trámites</button>
      </div>
    </nav>

    <!-- Redes Sociales e Iconos -->
    <div class="header-actions">
      <nav class="social-icons" aria-label="Redes sociales">
        <a href="#" class="social-link" aria-label="Facebook">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
        </a>
        <a href="#" class="social-link" aria-label="Twitter">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path></svg>
        </a>
        <a href="#" class="social-link" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line></svg>
        </a>
      </nav>
      <div class="mobile-menu-wrapper">
         <MobileMenuButton />
      </div>
    </div>
  </div>
</header>

<script>
  const header = document.getElementById('main-header');
  
  const handleScroll = () => {
    if (window.scrollY > 20) {
      header?.classList.add('scrolled');
    } else {
      header?.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', handleScroll);
</script>

<style>
  .header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 100;
    transition: all 0.3s ease;
    padding: 1rem 1.5rem;
    background-color: transparent;
    backdrop-filter: blur(0px);
    -webkit-backdrop-filter: blur(0px);
    border-bottom: 1px solid transparent;
  }

  .header.scrolled {
    background-color: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom-color: #E5E7EB;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  @media (min-width: 768px) {
    .header {
      padding: 1.5rem 1.5rem;
    }

    .header.scrolled {
      padding: 1rem 1.5rem;
    }
  }

  .header-container {
    max-width: 80rem;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  @media (min-width: 1024px) {
    .header-container {
      display: grid;
      grid-template-columns: 1fr auto 1fr;
    }
  }
  
  /* Logo */
  .logo-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-container {
    background-color: #750D2F;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .logo-container:hover {
    transform: scale(1.05);
  }

  .logo-image {
    height: 2rem;
    width: auto;
    display: block;
  }

  @media (min-width: 768px) {
    .logo-image {
      height: 2.5rem;
    }
  }

  /* Nav */
  .nav-desktop {
    display: none;
    justify-self: center;
  }

  @media (min-width: 1024px) {
    .nav-desktop {
      display: flex;
    }
  }

  .nav-pill {
    background-color: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid #f3f4f6;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.03), 0 8px 10px -6px rgba(0, 0, 0, 0.03);
    border-radius: 9999px;
    padding: 0.375rem 0.375rem;
    display: flex;
    align-items: center;
  }

  .nav-link {
    padding: 0.625rem 1.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #383838;
    transition: all 0.3s;
    text-decoration: none;
  }

  .nav-link:hover {
    color: #750D2F;
    background-color: rgba(117, 13, 47, 0.05);
  }

  .nav-link:active {
    color: #750D2F;
    background-color: rgba(117, 13, 47, 0.1);
  }

  .nav-divider {
    width: 1px;
    height: 1rem;
    background-color: #e5e7eb;
    margin: 0 0.5rem;
  }

  .nav-button-tramites {
    background-color: #750D2F;
    color: white;
    padding: 0.625rem 1.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
  }

  .nav-button-tramites:hover {
    background-color: #5c0a25;
    transform: translateY(-1px);
  }

  .nav-button-tramites:active {
    transform: translateY(0);
  }

  /* Socials & Actions */
  .header-actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.5rem;
  }

  .social-icons {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }

  @media (min-width: 768px) {
    .social-icons {
      display: flex;
    }
  }

  .social-link {
    width: 2.75rem;
    height: 2.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    color: #383838;
    transition: all 0.3s;
    text-decoration: none;
  }

  .social-link:hover {
    color: #750D2F;
    background-color: rgba(117, 13, 47, 0.05);
  }

  .social-link:active {
    background-color: rgba(117, 13, 47, 0.1);
  }

  .mobile-menu-wrapper {
    display: block;
  }

  @media (min-width: 1024px) {
    .mobile-menu-wrapper {
      display: none;
    }
  }
</style>

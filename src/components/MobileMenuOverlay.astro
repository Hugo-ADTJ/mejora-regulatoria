---
const menuItems = [
  { href: "/#inicio", label: "Inicio" },
  { href: "/#catalogo", label: "Catálogo" },
  { href: "/#consejo", label: "Consejo" },
];
---

<!-- Mobile Menu Full Screen Overlay -->
<nav class="mobile-nav" id="mobile-nav" aria-label="Menú móvil">
  <button
    class="mobile-close-button"
    id="mobile-close-button"
    aria-label="Cerrar menú"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
  <div class="mobile-nav-content">
    <a href="/" class="mobile-logo">
      <img
        src="/image.png"
        alt="XXV Ayuntamiento de Tijuana - Mejora Regulatoria"
        class="mobile-logo-image"
        width="200"
        height="80"
        loading="lazy"
        decoding="async"
      />
    </a>
    <ul class="mobile-menu">
      {
        menuItems.map((item) => (
          <li>
            <a href={item.href} class="mobile-link">
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>

<script>
  const openButton = document.getElementById("mobile-menu-button");
  const closeButton = document.getElementById("mobile-close-button");
  const nav = document.getElementById("mobile-nav");
  const menuLinks = document.querySelectorAll(".mobile-link");

  function openMenu() {
    nav?.classList.add("active");
    openButton?.setAttribute("aria-expanded", "true");
    document.body.style.overflow = "hidden";
  }

  function closeMenu() {
    nav?.classList.remove("active");
    openButton?.setAttribute("aria-expanded", "false");
    document.body.style.overflow = "";
  }

  // Open menu on button click
  openButton?.addEventListener("click", openMenu);

  // Close menu on close button click
  closeButton?.addEventListener("click", closeMenu);

  // Close menu on link click
  menuLinks.forEach((link) => {
    link.addEventListener("click", closeMenu);
  });

  // Close menu when resizing to desktop
  window.addEventListener("resize", () => {
    if (window.innerWidth >= 1024 && nav?.classList.contains("active")) {
      closeMenu();
    }
  });
</script>

<style>
  .mobile-close-button {
    position: fixed;
    top: 1.2rem;
    right: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    color: #383838;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
    z-index: 10001;
  }

  .mobile-close-button:hover {
    opacity: 0.7;
  }

  .mobile-close-button:active {
    opacity: 0.5;
  }

  @media (min-width: 768px) {
    .mobile-close-button {
      top: 1.5rem;
    }
  }

  .mobile-nav {
    position: fixed;
    inset: 0;
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 10000;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition:
      opacity 0.25s ease-out,
      visibility 0.25s ease-out;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  .mobile-nav.active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }

  @media (min-width: 1024px) {
    .mobile-nav {
      display: none;
    }
  }

  .mobile-nav-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
    gap: 3rem;
  }

  .mobile-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #750d2f;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
  }

  .mobile-logo-image {
    height: 3rem;
    width: auto;
  }

  .mobile-menu {
    list-style: none;
    width: 100%;
    max-width: 400px;
    padding: 0;
    margin: 0;
  }

  .mobile-link {
    display: block;
    padding: 1.25rem 1.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: #383838;
    text-align: center;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
    background-color: rgba(117, 13, 47, 0.05);
  }

  .mobile-link:hover {
    background-color: rgba(117, 13, 47, 0.1);
    color: #750d2f;
    transform: translateX(8px);
  }

  .mobile-link:active {
    background-color: rgba(117, 13, 47, 0.2);
  }
</style>

---
const principles = [
  "Simplificación administrativa",
  "Digitalización prioritaria",
  "Transparencia y rendición de cuentas",
  "Participación ciudadana",
  "Enfoque en resultados"
];

const cards = [
  {
    title: 'Agenda Regulatoria',
    description: 'Conoce las propuestas de creación, modificación o eliminación de regulaciones vigentes.',
    buttonText: 'Consultar agenda y enviar comentarios',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline></svg>`
  },
  {
    title: 'Agenda de Simplificación y Digitalización',
    description: 'Accede a las acciones programadas para simplificar y digitalizar trámites (publicación semestral).',
    buttonText: 'Consultar agenda y enviar comentarios',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"></path><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"></path></svg>`
  },
  {
    title: 'Análisis de Impacto Regulatorio',
    description: 'Herramienta para evaluar los efectos de nuevas regulaciones antes de su emisión.',
    buttonText: 'Próximamente',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>`
  }
];
---

<section id="gobernanza" class="governance-section">
  <div class="governance-container">
    <div class="section-header">
      <h2 class="section-title">Herramientas de Gobernanza Regulatoria</h2>
      <p class="section-description">
        El Sistema Municipal de Gobernanza Regulatoria coordina a las dependencias municipales para mejorar continuamente las regulaciones y simplificar los trámites y servicios, asegurando que generen beneficios superiores a sus costos y el máximo valor público.
      </p>
    </div>

    <div class="principles-section">
      <h3 class="principles-title">Principios rectores:</h3>
      <ul class="principles-list">
        {principles.map((principle) => (
          <li class="principle-item">
            <div class="principle-bullet"></div>
            <span class="principle-text">{principle}</span>
          </li>
        ))}
      </ul>
    </div>

    <ul class="cards-grid">
      {cards.map((card) => (
        <li class="governance-card">
          <div class="card-icon" set:html={card.icon}></div>
          <h4 class="card-title">{card.title}</h4>
          <p class="card-description">{card.description}</p>
          <a href="#" class="card-button">
            {card.buttonText}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .governance-section {
    padding: 8rem 1.5rem;
    background-color: #FFFFFF;
  }

  .governance-container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .section-header {
    margin-bottom: 5rem;
  }

  .section-overline {
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: #BA945C;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: 2.25rem;
    font-weight: 900;
    letter-spacing: -0.03em;
    color: #121212;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 3rem;
    }
  }

  .section-description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #383838;
    max-width: 56rem;
  }

  @media (min-width: 768px) {
    .section-description {
      font-size: 1rem;
    }
  }

  .principles-section {
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #E5E7EB;
  }

  .principles-title {
    font-size: 0.875rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #750D2F;
    margin-bottom: 1.5rem;
  }

  .principles-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0;
    border-top: 1px solid #E5E7EB;
  }

  @media (min-width: 640px) {
    .principles-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .principles-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .principle-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1rem 1rem 0;
    border-bottom: 1px solid #E5E7EB;
  }

  .principle-bullet {
    width: 6px;
    height: 6px;
    background-color: #BA945C;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .principle-text {
    font-size: 1rem;
    line-height: 1.4;
    color: #383838;
    font-weight: 500;
  }

  .cards-grid {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .governance-card {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    background-color: #FAFAFA;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    border: 1px solid #E5E7EB;
  }

  @media (min-width: 768px) {
    .governance-card:hover {
      border-color: #BA945C;
    }
  }

  .governance-card:active {
    border-color: #BA945C;
  }

  .card-icon {
    color: #750D2F;
    display: flex;
    width: 40px;
    height: 40px;
    align-items: center;
    justify-content: center;
    background-color: #FFFFFF;
    border-radius: 0.375rem;
    border: 1px solid #E5E7EB;
  }

  .card-icon svg {
    width: 20px;
    height: 20px;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 900;
    color: #121212;
    line-height: 1.3;
  }

  .card-description {
    font-size: 1rem;
    color: #383838;
    line-height: 1.6;
    flex: 1;
  }

  .card-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 700;
    color: #750D2F;
    text-decoration: none;
    width: fit-content;
    transition: all 0.2s ease;
    padding: 0.5rem 0;
    border-bottom: 2px solid transparent;
  }

  @media (min-width: 768px) {
    .card-button:hover {
      gap: 0.75rem;
      border-bottom-color: #750D2F;
    }
  }

  .card-button:active {
    gap: 0.75rem;
    border-bottom-color: #750D2F;
  }
</style>

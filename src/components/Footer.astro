<style>
  .footer {
    padding: 1rem 2rem;
    border-top: 1px solid #e5e7eb;
    background-color: #750d2f;
  }

  .footer-container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
    }
  }

  .footer-branding {
    display: flex;
    flex-direction: column;
  }

  .footer-tijuana {
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.05em;
    line-height: 1;
    color: #383838;
  }

  .footer-ayuntamiento {
    font-size: 10px;
    font-weight: 700;
    color: #ba945c;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-top: 0.25rem;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .footer-link {
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #fff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .footer-link:hover {
    color: #ba945c;
  }

  .footer-copyright {
    font-size: 10px;
    font-weight: 700;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .logo-image {
    height: 3rem;
    width: auto;
    display: block;
  }

  @media (min-width: 768px) {
    .logo-image {
      height: 2.5rem;
    }
  }
</style>

---
const functions = [
  "Proponer acciones de simplificación administrativa",
  "Impulsar la digitalización de trámites y servicios",
  "Dar seguimiento a la Agenda Regulatoria y de Simplificación",
  "Promover la participación ciudadana",
];

const cards = [
  {
    title: "Objetivo e Integrantes",
    description:
      "Conoce la estructura, integración y atribuciones del Consejo.",
    buttonText: "Ver organigrama",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>`,
  },
  {
    title: "Sesiones del Consejo",
    description:
      "Accede a los videos, actas, acuerdos y documentos generados en las sesiones del Consejo.",
    buttonText: "Ver sesiones y documentos",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path><path d="M12 9v4"></path><path d="M12 17h.01"></path></svg>`,
  },
];
---

<section id="consejo" class="council-section">
  <div class="council-container">
    <div class="council-content">
      <div class="council-info">
        <div class="section-header">
          <h2 class="council-title">
            Consejo de Simplificación y Digitalización
          </h2>
          <p class="council-description">
            El Consejo de Simplificación y Digitalización del Municipio de
            Tijuana es un órgano de consulta, coordinación y vinculación con los
            sectores social, privado, público y académico, encargado de impulsar
            la implementación de la política municipal de Mejora Regulatoria.
          </p>
        </div>
      </div>

      <div class="functions-section">
        <h3 class="functions-title">Funciones principales:</h3>
        <ul class="functions-list">
          {
            functions.map((func) => (
              <li class="function-item">
                <div class="function-bullet" />
                <span class="function-text">{func}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="council-cards">
        <ul class="cards-grid">
          {
            cards.map((card) => (
              <li class="council-card">
                <div class="card-icon" set:html={card.icon} />
                <h4 class="card-title">{card.title}</h4>
                <p class="card-description">{card.description}</p>
                <a href="#" class="card-button">
                  {card.buttonText}
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <polyline points="9 18 15 12 9 6" />
                  </svg>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>

<style>
  .council-section {
    padding: 8rem 1.5rem;
    background-color: #f9f9f9;
  }

  .council-container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .council-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .section-header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .section-overline {
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.4em;
    color: #750d2f;
  }

  .council-title {
    font-size: 2.25rem;
    font-weight: 900;
    letter-spacing: -0.03em;
    color: #383838;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .council-title {
      font-size: 3rem;
    }
  }

  .council-description {
    font-size: 1rem;
    color: #383838;
    line-height: 1.6;
  }

  .functions-section {
    margin-bottom: 2rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .functions-title {
    font-size: 0.875rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #750d2f;
    margin-bottom: 1.5rem;
  }

  .functions-list {
    display: grid;
    gap: 0;
    border-top: 1px solid #e5e7eb;
  }

  @media (min-width: 640px) {
    .functions-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .function-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1rem 1rem 0;
    border-bottom: 1px solid #e5e7eb;
  }

  .function-bullet {
    width: 6px;
    height: 6px;
    background-color: #ba945c;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .function-text {
    font-size: 1rem;
    line-height: 1.4;
    color: #383838;
    font-weight: 500;
  }

  .council-cards {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .cards-grid {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .cards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .council-card {
    padding: 2rem 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    border-bottom: 1px solid #e5e7eb;
    transition: all 0.3s ease;
  }

  .council-card:last-child {
    border-bottom: none;
  }

  .card-icon {
    color: #750d2f;
    display: flex;
  }

  .card-title {
    font-size: 1.125rem;
    font-weight: 900;
    color: #383838;
    line-height: 1.3;
  }

  .card-description {
    font-size: 1rem;
    color: #383838;
    line-height: 1.5;
    flex: 1;
  }

  .card-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    font-weight: 700;
    color: #750d2f;
    text-decoration: none;
    width: fit-content;
    transition: gap 0.3s ease;
    padding: 0.5rem 0;
  }

  @media (min-width: 768px) {
    .card-button:hover {
      gap: 0.75rem;
    }
  }

  .card-button:active {
    gap: 0.75rem;
  }
</style>
